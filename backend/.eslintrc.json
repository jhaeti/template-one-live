{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"es2021": true,
		"node": true,
		"jest/globals": true
	},
	"extends": [
		"plugin:jest/recommended",
		"plugin:jest/style",
		"airbnb-base",
		"eslint:recommended",
		"prettier"
	],

	"plugins": ["jest"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
	},
	"rules": {
		"no-console": "off",
		"jest/no-done-callback": "off"
	}
}
